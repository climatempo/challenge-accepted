  <body>
    <nav class="navbar navbar-blue navbar-fixed-top">
      <div class="container text-center">
	     <img src="images/logo-white.png" class="navbar-logo" height="20px" />
      </div>
    </nav>
    <nav class="navbar navbar-fixed-top subnavbar">
      <div class="input-group">
        <input type="text" class="form-control input-lg input-search" name="search" placeholder="Selecione a localidade">
        <span class="input-group-addon input-search" id="basic-addon1">
          <i class="fa fa-lg fa-search"></i>
        </span>
      </div>
    </nav>
    
    <div class="container container-padding">
      <div class="row row-search" style="display: none">
	    <h4>Previsão para <span class="selected-locale"></span></h4>
      </div>
      
      <div class="list-weather">
