<nav class="navbar fixed-top navbar-light bg-light">
    <a class="navbar-brand" href="#">
        <img src="images/logo.png" width="150" height="30" class="d-inline-block align-top" alt="">
    </a>
</nav>

<form class="form-inline" action="/" method="POST">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="city">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

{{#if city}}
<h3>Previsão para {{city}}</h3>
{{/if}} {{#each weathers}}
<div class="card border-dark mb-3" style="max-width: 18rem;">
    <div class="card-header">
        <div class="row">{{date}}</div>
        <div class="row" style="margin-top: 10px;">{{text}}</div>
    </div>
    <div class="card-body text-dark">
        {{!--
        <h5 class="card-title">Dark card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> --}}

        <div class="row">
            <div class="col-sm">I</div>
            <div class="col-sm">{{temperature.max}}</div>
            <div class="col-sm">U</div>
            <div class="col-sm">{{temperature.min}}</div>
        </div>

        <div class="row">

        </div>
    </div>
</div>
{{/each}} 


