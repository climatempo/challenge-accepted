each data in forecast
	div(class="row")
		div(class="col s12")
			div(class="card white")
				div(class="card-content")
					div(class="details")
						span(class="card-title") #{moment(data.date).format("DD/MM/YYYY")}
						p #{data.text}
					div(class="weather")
						div(class="row center-align")
							div(class="col s2")
								img(src="/images/icons/upload.png")
							div(class="col s4 font")
								label(class="red-text text-accent-4") #{data.temperature.max}ยบ
							div(class="col s2 font")
								img(src="/images/icons/download.png")
							div(class="col s4 font")
								label(class="blue-text text-lighten-1") #{data.temperature.min}ยบ
							div(class="col s2 font")
								img(src="/images/icons/raindrop-close-up.png")
							div(class="col s4 font")
								label #{data.rain.precipitation}mm
							div(class="col s2 font")
								img(src="/images/icons/protection-symbol-of-opened-umbrella-silhouette-under-raindrops.png")
							div(class="col s4 font")
								label #{data.rain.probability}%